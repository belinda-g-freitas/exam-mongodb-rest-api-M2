generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  
}

model Book {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  description       String
  Authors           Author[] @relation(fields: [authors], references: [id])
  authors           String[] @db.ObjectId
  genres            String[]
  publishYear       Int
  availableQuantity Int
  Loan              Loan[]

  @@index([title])
  @@fulltext([title, description])
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  nationality String
  birthday    String //DateTime
  Loan        Loan[]

  @@index([name])
}

model Author {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  user           String   @db.ObjectId
  Books          Book[]   @relation(fields: [publishedBooks], references: [id])
  publishedBooks String[] @db.ObjectId
}

model Loan {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  User                User      @relation(fields: [user], references: [id])
  user                String    @db.ObjectId
  Book                Book      @relation(fields: [book], references: [id])
  book                String    @db.ObjectId
  loanDate            DateTime
  plannedReturnDate   DateTime
  effectiveReturnDate DateTime?
}
